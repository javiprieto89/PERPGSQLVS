  "cSpell.words": [
    "noopener",
    "noreferrer",
    "svgr",
    "tailwind",
    "tailwindcss",
    "tanstack",
    "typecheck",
    "vaporwave",
    "virtuals",
    "youtube",
    "zustand"
  ],
  "css.lint.unknownAtRules": "ignore",
  "cSpell.language": "en,es",
  "[windows]": {
