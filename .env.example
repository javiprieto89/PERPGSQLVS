# ===============================================
# LubricentroDB ERP Configuration
# ===============================================
# This is the unified .env file for the entire project
# Used by both development and Docker environments

# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=your_db_host
DB_NAME=your_database_name
DB_DRIVER=ODBC+Driver+18+for+SQL+Server
DB_TRUST_CERTIFICATE=yes
DB_ENCRYPT=optional

# ===============================================
# JWT AUTHENTICATION
# ===============================================
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_base64_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=300

# ===============================================
# AFIP CONFIGURATION (Argentina Tax Authority)
# ===============================================
# Using special CUIT that doesn't require certificate
AFIP_CUIT=your_afip_cuit
AFIP_CERT_PATH=./certificates/your_cert.pfx
AFIP_CERT_PASSWORD=your_cert_password
AFIP_PRODUCTION=false

# ===============================================
# CORS CONFIGURATION
# ===============================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# ===============================================
# CACHE CONFIGURATION
# ===============================================
CACHE_TTL_STATIC=3600
CACHE_TTL_DYNAMIC=300

# ===============================================
# RATE LIMITING
# ===============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===============================================
# LOGGING
# ===============================================
LOG_LEVEL=INFO
ENABLE_METRICS=True


